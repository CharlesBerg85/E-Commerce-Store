{
  "ConnectionStrings": {
    // Represents the connection string for the ShopOnline database.
    // It specifies the server, database name, and additional options for trusted connection and server certificate trust.
    "ShopOnlineConnection": "Server=FRODO;Database=ShopOnline;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "Logging": {
    // Configures the logging behavior for the application.
    // The "LogLevel" sub-section defines different log levels for different categories.
    "LogLevel": {
      // Sets the default log level to "Information".
      // This means logs with information severity or above will be logged.
      "Default": "Information",

      // Sets the log level for the "Microsoft.AspNetCore" category to "Warning".
      // Only logs with warning severity or above from this category will be logged.
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
